@model NoixMagicroquanteWebsite.Models.LoginViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = ViewBag.Title;
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-warning text-center">@TempData["Message"]</div>
}

<div class="row justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="col-3">
        <div class="card shadow">
            <div class="card-body d-flex flex-column">
                <form asp-action="Login">
                    @Html.AntiForgeryToken()
                    <h4 class="card-title text-center">Connexion</h4>
                    <div class="form-group">
                        <input type="email" id="Email" asp-for="Email" name="Email" class="form-control" placeholder="Entrez votre courriel" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="password" id="Password" asp-for="Password" name="Password" class="form-control" placeholder="Entrez votre mot de passe" />
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i id="passwordIcon" class="fa-solid fa-eye" onclick="togglePasswordVisibility()"></i>
                                </span>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Connexion" class="btn btn-primary" />
                    </div>
                </form>
                <div class="mt-auto">
                    <p class="text-center mb-0">Pas encore de compte client ? <a href="~/account/signup">Créer un compte</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
