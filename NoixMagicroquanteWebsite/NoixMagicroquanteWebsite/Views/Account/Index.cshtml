@model NoixMagicroquanteWebsite.Models.User
@{
    Layout = "_Layout";
    ViewBag.Title = ViewBag.Title;
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center">@TempData["Message"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center">@TempData["Error"]</div>
}

<div class="d-flex justify-content-center align-items-center height-element">
    <div class="card-background card shadow card-width">
        <div class="card-title mt-2">
            <h4 class="text-color text-center mt-4">Compte de @Model.UserName</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                <div class="field-background user-info mb-3">
                    <div class="mb-1">
                        <label asp-for="FirstName"><b>Prénom :</b></label>
                        <input type="text" asp-for="FirstName" id="FirstName" name="FirstName" class="form-control" value="@Model.FirstName" placeholder="Entrez votre prénom" disabled="true" required />
                    </div>
                </div>
                <div class="field-background user-info mb-3">
                    <div class="mb-1">
                        <label asp-for="LastName"><b>Nom :</b></label>
                        <input type="text" asp-for="LastName" id="LastName" name="LastName" class="form-control" value="@Model.LastName" placeholder="Entrez votre nom" disabled="true" required />
                    </div>
                </div>
                <div class="field-background user-info mb-3">
                    <div class="mb-1">
                        <label asp-for="UserName"><b>Nom d'utilisateur :</b></label>
                        <input type="text" asp-for="UserName" id="UserName" name="UserName" class="form-control" value="@Model.UserName" placeholder="Entrez votre nom d'utilisateur" disabled="true" required />
                    </div>
                </div>
                <div class="field-background user-info mb-3">
                    <div class="mb-1">
                        <label asp-for="Email"><b>Courriel :</b></label>
                        <input type="email" asp-for="Email" id="Email" name="Email" class="form-control" value="@Model.Email" placeholder="Entrez votre courriel" disabled="true" required />
                    </div>
                </div>
                <div id="hiddenFields">
                    <div class="field-background user-info mb-3">
                        <div class="mb-1">
                            <label for="OldPassword"><b>Ancien mot de passe :</b></label>
                            <input type="password" id="OldPassword" name="OldPassword" class="form-control" placeholder="Entrez votre ancien mot de passe" required />
                        </div>
                    </div>
                    <div class="field-background user-info mb-3">
                        <div class="mb-1">
                            <label asp-for="Password"><b>Nouveau mot de passe :</b></label>
                            <input type="password" asp-for="Password" name="Password" class="form-control" placeholder="Entrez votre nouveau mot de passe" required />
                        </div>
                    </div>
                    <div class="field-background user-info mb-3">
                        <div class="mb-1">
                            <label for="ConfirmPassword"><b>Confirmation du nouveau mot de passe :</b></label>
                            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Confirmer votre mot de passe" required />
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success" id="btnSave"><i class="fa-solid fa-save"></i> Sauvegarder</button>
                        <button class="btn btn-danger" id="btnCancel" onclick="toggleAccountEdit()"><i class="fa-solid fa-circle-xmark"></i> Annuler</button>
                    </div>
                </div>
            </form>
            <div class="text-center">
                <button class="btn btn-primary" id="btnEdit" onclick="toggleAccountEdit()"><i class="fa-solid fa-pen-to-square"></i> Éditer</button>
            </div>
        </div>
    </div>
</div>