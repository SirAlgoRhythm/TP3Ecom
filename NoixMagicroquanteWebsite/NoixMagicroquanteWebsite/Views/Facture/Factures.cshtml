@model List<NoixMagicroquanteWebsite.Models.Basket>
@{
    Layout = "_Layout";
    ViewBag.Title = ViewBag.Title;
}

@if (Model.Count() == 0)
{
    <div class="center">
        <h1>Il n'y a pas encore de facture !</h1>
    </div>
}
else
{
    <div class="center-top">
        <table class="shadow text-center">
            <thead class="table-head-background">
                <tr class="align-middle text-color">
                    <th scope="col" class="col-id">Id</th>
                    <th scope="col" class="col-first-name">Utilisateur</th>
                    <th scope="col" class="col-last-name">Prix total</th>
                    <th scope="col" class="col-username">Date d'achat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var facture in Model)
                {
                    @if (!facture.Active)
                    {
                        <tr class="align-middle">
                            <td scope="row">@facture.BasketId</td>
                            <td>@facture.User.FirstName @facture.User.LastName</td>
                            <td>@facture.TotalPrice $</td>
                            <td>@facture.SellDate</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}